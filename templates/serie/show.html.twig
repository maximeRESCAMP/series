{% extends 'base.html.twig' %}

{% block body %}
    <h2>Serie's detail</h2>
    <div class="serie-details">
        <div class="serie-poster">
            <img src="{{ asset('img/posters/series/')~ serie.poster }}" alt="{{ serie.name }}">
        </div>
        <div class="serie-details-infos">
            <h2>{{ serie.name }}</h2>
            <div>User rating : {{ serie.vote }}</div>
            <div>Categorized in : {{ serie.genres }}</div>
            <div>Serie status : : {{ serie.firstAirDate | date('Y-m-d')  }} to {{ serie.lastAirDate | date ('Y-m-d') }}</div>
            <div>{{ serie.overview }}</div>
        </div>
        <section class="seasons">
<h3>Seasons</h3>
            {%  for season in serie.seasons %}
<article>
    <img src="{{ asset('img/posters/seasons/'~ season.poster) }}" alt="{{ serie.name }} season {{ season.number }}">
    <div>
        <h4>Season #{{ season.number }}</h4>
        <div>{{ season.overview }}</div>
    </div>
</article>
            {% endfor %}
        </section>
    </div>

{% endblock %}

{% block title %}
{{ parent() }}
{% endblock %}
{% block styleCss %}
<style>
    body{
        background-image: linear-gradient(60deg,rgba(0,0,0,0.8), rgba(0,0,0,0.5)),url("{{ asset('img/backdrops/')~serie.backdrop }}");

    }
</style>
{%endblock %}


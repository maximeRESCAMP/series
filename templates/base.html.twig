<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Series !{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('img/icon.png') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

</head>
<body>
{% block styleCss %}{% endblock %}
<div class="container">
    <header>
        <h1>

            <a href="{{ path('main_home') }}">
                <img src="{{ asset('img/logo.svg') }}" alt="Series !  | Home">
            </a>
        </h1>
        {% include 'menu/nav.html.twig' %}
    </header>
    <main>
        {# lis les messages flash stock√©s #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </main>
    <footer>
        {% include 'menu/nav.html.twig' %}
    </footer>
</div>
</body>
</html>
